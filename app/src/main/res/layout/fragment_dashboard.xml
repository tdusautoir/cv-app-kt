<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <TextView
        android:id="@+id/experience_pro_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/background_2b3341"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="EXPERIENCES PROFESSIONNELS"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/fcup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/experience_pro_title">

        <TextView
            android:id="@+id/fcup_date"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:textAlignment="center"
            android:background="@drawable/background_gray"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="2020-2021" />

        <LinearLayout
            android:id="@+id/experience_fcup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/background_gray"
            android:orientation="vertical">

            <TextView
                android:id="@+id/experience_fcup1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2B3341"
                android:textSize="14sp"
                android:text="DÉVELOPPEUR WORDPRESS" />

            <TextView
                android:id="@+id/experience_fcup2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="Fier comme un paon - 59200 Tourcoing" />

            <TextView
                android:id="@+id/experience_fcup3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2B3341"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:text="Traduction et adaptation des différentes maquettes graphiques lié à une refonte du site.\nDéveloppement de différentes fonctionnalités afin d'améliorer l'expériences client." />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/freelance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fcup">

        <TextView
            android:id="@+id/freelance_date"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:textAlignment="center"
            android:background="@drawable/background_gray"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="07/2018" />

        <LinearLayout
            android:id="@+id/experience_freelance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/background_gray"
            android:orientation="vertical">

            <TextView
                android:id="@+id/experience_freelance1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2B3341"
                android:textSize="14sp"
                android:text="STAGE - DEV FREELANCE" />

            <TextView
                android:id="@+id/experience_freelance2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="Domicile - 59310 Beuvry-la-forêt" />

            <TextView
                android:id="@+id/experience_freelance3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2B3341"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:text="Découverte du métier de développeur free-lance.\nDécouverte du langage PHP.\nPetits projets sous forme de missions." />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/project_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/background_2b3341"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="PROJETS"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/freelance" />

    <LinearLayout
        android:id="@+id/apdc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/project_title">

        <TextView
            android:id="@+id/apdc_date"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:textAlignment="center"
            android:background="@drawable/background_gray"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="2022" />

        <LinearLayout
            android:id="@+id/description_apdc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/background_gray"
            android:orientation="vertical">

            <TextView
                android:id="@+id/description_apdc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2B3341"
                android:textSize="14sp"
                android:text="www.aupaysdescomptines.fr" />

            <TextView
                android:id="@+id/description_apdc2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="Site vitrine pour micro-crèche" />

            <TextView
                android:id="@+id/description_apdc3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2B3341"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:text="Compétences : HTML, CSS, PHP, JS" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/asb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/apdc">

        <TextView
            android:id="@+id/asb_date"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:textAlignment="center"
            android:background="@drawable/background_gray"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="2022" />

        <LinearLayout
            android:id="@+id/description_asb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/background_gray"
            android:orientation="vertical">

            <TextView
                android:id="@+id/description_asb1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2B3341"
                android:textSize="14sp"
                android:text="www.dev-asbeuvrylaforet.monasso.org" />

            <TextView
                android:id="@+id/description_asb2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="Back-office pour association sportive" />

            <TextView
                android:id="@+id/description_asb3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2B3341"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:text="Compétences : HTML, CSS, PHP, JS, SQL, Jquery" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>